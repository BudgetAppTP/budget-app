      },
      "put": {
        "summary": "Update receipt by ID",
        "parameters": [
          {
            "in": "path",
            "name": "receipt_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Receipt identifier"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReceiptUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Receipt updated",
            "content": {
              "application/json": {
                "schema": {
